<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/design_16dp"
    android:paddingRight="@dimen/design_16dp"
    android:paddingTop="@dimen/design_10dp"
    android:paddingBottom="@dimen/design_10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.jackh.wandroid.widget.LabelTextView
            android:id="@+id/top_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_text"
            android:textSize="@dimen/design_text_12sp"
            android:paddingLeft="@dimen/design_4dp"
            android:paddingRight="@dimen/design_4dp"
            android:paddingTop="@dimen/design_2dp"
            android:paddingBottom="@dimen/design_2dp"
            android:textColor="@color/color_FA0000"
            android:layout_marginRight="@dimen/design_4dp"
            android:layout_marginEnd="@dimen/design_4dp"
            app:label_background_color="@color/color_FA0000"
            app:label_stroke_width="1dp"
            app:label_has_stroke="true"/>

        <com.jackh.wandroid.widget.LabelTextView
            android:id="@+id/new_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_text"
            android:textSize="@dimen/design_text_12sp"
            android:paddingLeft="@dimen/design_4dp"
            android:paddingRight="@dimen/design_4dp"
            android:paddingTop="@dimen/design_2dp"
            android:paddingBottom="@dimen/design_2dp"
            android:textColor="@color/color_FA0000"
            android:layout_marginRight="@dimen/design_4dp"
            android:layout_marginEnd="@dimen/design_4dp"
            app:label_background_color="@color/color_FA0000"
            app:label_stroke_width="1dp"
            app:label_has_stroke="true"/>

        <com.jackh.wandroid.widget.LabelTextView
            android:id="@+id/tag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_text_12sp"
            android:paddingLeft="@dimen/design_4dp"
            android:paddingRight="@dimen/design_4dp"
            android:paddingTop="@dimen/design_2dp"
            android:paddingBottom="@dimen/design_2dp"
            android:textColor="@color/color_009A61"
            android:layout_marginRight="@dimen/design_4dp"
            android:layout_marginEnd="@dimen/design_4dp"
            tools:text="项目"
            app:label_background_color="@color/color_009A61"
            app:label_stroke_width="1dp"
            app:label_has_stroke="true"/>

        <TextView
            android:id="@+id/author_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/design_text_14sp"
            android:textColor="@color/color_666"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/design_4dp"
            android:layout_marginEnd="@dimen/design_4dp"
            tools:text="Jackson"/>

        <TextView
            android:id="@+id/chapter_tv"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_text_14sp"
            android:textColor="@color/color_666"
            android:gravity="end"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="问答/官方"/>

    </LinearLayout>

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/design_text_16sp"
        android:textColor="@color/color_333"
        android:layout_marginTop="@dimen/design_10dp"
        android:layout_marginBottom="@dimen/design_10dp"
        android:lineSpacingExtra="@dimen/design_2dp"
        tools:text="利用Open CV对图片进行处理，快速实战识别图文信息"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/collection_icon"
            android:layout_width="@dimen/design_32dp"
            android:layout_height="@dimen/design_32dp"
            android:src="@drawable/like_image" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/design_text_14sp"
            android:textColor="@color/color_999"
            android:layout_marginLeft="@dimen/design_16dp"
            android:layout_marginStart="@dimen/design_16dp"
            tools:text="2019-11-03"/>

    </LinearLayout>

</LinearLayout>